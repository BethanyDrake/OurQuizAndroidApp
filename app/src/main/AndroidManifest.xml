<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sycorax.ourquiz">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".JoinActivity"
                android:label="@string/title_activity_join"
                android:parentActivityName=".MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.sycorax.ourquiz.MainActivity"/>
        </activity>
        <activity
                android:name=".HostActivity"
                android:label="@string/title_activity_host"
                android:parentActivityName=".MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.sycorax.ourquiz.MainActivity"/>
        </activity>
        <activity android:name=".WaitingForPlayersActivity"
                  android:label="Waiting For Players">
        </activity>
        <activity android:name=".SubmitQuestionActivity"
                  android:label="Submit A Question">
        </activity>
    </application>

</manifest>
